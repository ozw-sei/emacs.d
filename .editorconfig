root = true

[*]
end_of_line = lf

trim_trailing_whitespace = true
insert_final_newline = true


[*.el]
indent_style = space

[Makefile]
indent_style = tab
tab_width = 4

[.gitmodules]
indent_style = tab
tab_width = 4

[*.yml]
indent_style = space
indent_size = 2

[ert-tests/**/*.ini]
file_type_ext = editorconfig

[/elisp/**]
charset = none
end_of_line = none
insert_final_newline = none
trim_trailing_whitespace = none
max_line_length = none
indent_style = none
indent_size = none

[.projectile]
end_of_line = none
insert_final_newline = none
trim_trailing_whitespace = none

[/dict/**]
charset = none
end_of_line = none
max_line_length = none
insert_final_newline = none
trim_trailing_whitespace = none
indent_style = none
indent_size = none

[/hunspell/**]
charset = none
end_of_line = none
max_line_length = none
insert_final_newline = none
trim_trailing_whitespace = none
indent_style = none
indent_size = none
